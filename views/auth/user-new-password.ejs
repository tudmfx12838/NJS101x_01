<%- include('../includes/head.ejs') %>

</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <div class="container mt-3">
            <div class="row">
                <div class="col col-md-3 col-lg-4"></div>
                <div class="col-10 col-md-6 col-lg-4">
                    <% if (errorMessage) { %> 
                        <p class="alert-danger text-center"><%= errorMessage %></p>
                    <% } else { %>
                        <p class="text-center">Nhập mật khẩu mới</p>
                    <% } %>
                </div>
                <div class="col col-md-3 col-lg-4"></div>
            </div>
            <div class="row">
                <div class="col col-md-3 col-lg-4"></div>
                <div class="col-10 col-md-6 col-lg-4">
                    <form action="/new-password" method="POST">
                        <div class="mt-3 mb-3">
                            <label class="form-label" for="password">Mật khẩu mới</label>
                            <input class="form-control" type="password" name="password" id="password" >
                        </div>
                        <div class="mt-3 mb-3">
                            <label class="form-label" for="pwConfirm">Xác nhận lại mật khẩu mới</label>
                            <input class="form-control" type="password" name="pwConfirm" id="pwConfirm" >
                        </div>

                        <div class="text-center mt-3">
                            <input type="hidden" name="userId" value="<%= userId %>">
                            <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button class="btn btn-primary" type="submit">Thay đổi mật khẩu</button>
                        </div>
                    </form>
                </div>
                <div class="col col-md-3 col-lg-4"></div>
            </div>
        </div>
    </main>
<%- include('../includes/end.ejs') %> 