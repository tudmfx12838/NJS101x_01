<body>
   <%- include('../includes/navigation.ejs') %>
    <main>
        <div class="container mt-3">
            <div class="row">
                <div class="col col-md-3 col-lg-4"></div>
                <div class="col-10 col-md-6 col-lg-4">
                    <% if (errorMessage) { %> 
                        <p class="alert-danger text-center"><%= errorMessage %></p>
                    <% } else { %>
                        <p class="text-center">Đăng Nhập</p>
                    <% } %>
                </div>
                <div class="col col-md-3 col-lg-4"></div>
            </div>

            <div class="row">
                <div class="col col-md-3 col-lg-4"></div>
                <div class="col-10 col-md-6 col-lg-4">
                    <form class="staff-form" action="/login" method="POST">
                        <div class="mt-3 mb-3">
                            <label class="form-label" for="loginId">MSNV: </label>
                            <input class="form-control" type="text" name="loginId" id="loginId" value="<%= oldInput.loginId %>">
                        </div>
                        <div class="mt-3 mb-3">
                            <label class="form-label"  for="password">Mật khẩu: </label>
                            <input class="form-control" type="password" name="password" id="password" value="">
                        </div>
                        <div class="text-center">
                            <a href="/reset">Thay đổi mật khẩu</a>
                        </div>
                        <div class="text-center mt-3">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button class="btn-primary" type="submit">Đăng Nhập</button>
                        </div>
                    </form>
                </div>
                <div class="col col-md-3 col-lg-4"></div>
            </div>
        </div>
    </main>

<%- include('../includes/end.ejs') %>