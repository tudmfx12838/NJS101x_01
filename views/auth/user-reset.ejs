                    <form action="/reset" method="POST">
                        <div class="mt-3 mb-3">
                            <label class="form-label" for="idNumber">MSNV</label>
                            <input class="form-control" type="text" name="idNumber" id="idNumber">
                        </div>
                        <div class="text-center mt-3">
