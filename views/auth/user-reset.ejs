            <div class="row">
                <div class="col col-md-3 col-lg-4"></div>
                <div class="col-10 col-md-6 col-lg-4">
                    <% if (errorMessage) { %> 
                        <p class="alert-danger text-center"><%= errorMessage %></p>
                    <% } else { %>
                        <p class="text-center">Nhập mã số nhân viên</p>
                    <% } %>
