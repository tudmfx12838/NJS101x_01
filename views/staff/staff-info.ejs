<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/modal.css">
    <!-- <link rel="stylesheet" href="/css/product.css"> -->
</head>

<body>
   <%- include('../includes/navigation.ejs') %>
    <main>
            <div class="staff-form" >
                <form class="staff-form" action="/staff-info" method="GET">
                    <label for="monthSalary">Tra cứu: </label>
                    <input type="text" id="search" name="search">
                    <button class="btn" type="submit">Tìm</button>
                </form>
            </div>
            <div>
                <img src="<%= staff.image %>" alt="<%= staff.name %>">
            </div>
            <div>
                <h2>Mã số: <%= staff.idNumber %></h2>
                <h2>Tên nhân viên: <%= staff.name %></h2>
                <h2>Ngày sinh: <%= staff.doB.toISOString().substring(0, 10) %></h2>
                <h2>Ngày vào công ty: <%= staff.startDate.toISOString().substring(0, 10) %></h2>
                <h2>Phòng ban: <%= staff.department %></h2>
                <h2>Hệ số lương: <%= staff.salaryScale %></h2>
                <h2>Số giờ nghỉ phép còn: <%= staff.annualLeave %> giờ</h2>
            </div>

            <div class="staff-form" >
                <!-- Trigger/Open The Modal -->
                <button class="btn staff-form" id="myBtn">Chỉnh sửa</button>
                <!-- The Modal -->

                <div id="myModal" class="modal">
                    <div class="modal-content">
                        <span class="close" id="close">&times;</span>
                        <h2>Chỉnh sửa thông tin Nhân Viên</h2>
                        <form class="staff-form" action="/staff-info" method="POST">
                            <div class="form-control">
                                <label for="idNumber">MSNV: </label>
                                <input type="text" name="idNumber" id="idNumber" value="<%= staff.idNumber %>" disabled>
                            </div>
                            <div class="form-control">
                                <label for="name">Tên Nhân Viên: </label>
                                <input type="text" name="name" id="name" value="<%= staff.name %>" disabled>
                            </div>
                            <div class="form-control">
                                <label for="doB">Ngày sinh: </label>
                                <input type="date" name="doB" id="doB" value="<%= staff.doB.toISOString().substring(0, 10) %>" disabled>
                            </div>
                            <div class="form-control">
                                <label for="startDate">Ngày vào công ty: </label>
                                <input type="date" name="startDate" id="startDate" value="<%= staff.startDate.toISOString().substring(0, 10) %>" disabled>
                            </div>
                            <div class="form-control">
                                <label for="salaryScale">Hệ số lương: </label>
                                <input type="number" name="salaryScale" id="salaryScale" value="<%= staff.salaryScale %>" disabled>
                            </div>
                            <div class="form-control">
                                <label for="department">Phòng ban: </label>
                                <select name="department" id="department" value="staff" disabled>
                                    <option value="IT">IT</option>
                                    <option value="HR">HR</option>
                                    <option value="Sale">Sale</option>
                                    <option value="Marketing">Marketing</option>
                                    <option value="Finance">Finance</option>
                                </select>
                            </div>
                            <div class="form-control">
                                <label for="image">Link Ảnh: </label>
                                <input type="text" name="image" id="image" value="<%= staff.image %>">
                            </div>
                            <button class="btn" type="submit">Thêm</button>
                        </form>
                    </div>
                </div>
            </div>
    </main>

<%- include('../includes/end.ejs') %>